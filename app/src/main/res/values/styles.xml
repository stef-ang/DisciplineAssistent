<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionOverflowButtonStyle">@style/MyOverflow</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflow</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_color_red</item>

        <!-- Support library compatibility -->
        <item name="background">@color/action_bar_color_red</item>
    </style>

    <style name="MyOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/option_menu_icon24</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
