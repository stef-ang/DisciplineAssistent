<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stef_developer.disciplineassistent.fragments.ViewPlanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_delete">
        <LinearLayout
            android:id="@+id/ll_viewplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin_frag"
            android:paddingRight="@dimen/activity_horizontal_margin_frag"
            android:paddingTop="@dimen/activity_vertical_margin_frag"
            android:paddingBottom="@dimen/activity_vertical_margin_frag"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_plan_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="(title plan)"
                android:textStyle="bold"
                android:textSize="@dimen/fontsize_normal2"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_detail"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_ic"
                    android:text="@string/tv_detail"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_priority"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:id="@+id/imng_priority"
                    android:layout_width="@dimen/priority_icon"
                    android:layout_height="@dimen/priority_icon"
                    android:layout_marginLeft="@dimen/margin_left_ic"
                    android:src="@drawable/p4_selected"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_day"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <GridView
                    android:id="@+id/gv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_ic">
                </GridView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_day2"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_repeat_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_left_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_events"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/margin_left_ic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_start2"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx:yy"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_left_ic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_finish2"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx:yy"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_left_ic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_motivation"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_motivation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_ic"
                    android:text="@string/tv_motivation"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_reward"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_ic"
                    android:text="@string/tv_reward"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_view_add_plan3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_report"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_ic"
                    android:text="80%"
                    android:textSize="@dimen/fontsize_normal"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_above="@+id/btn_delete"-->
        <!--android:gravity="center"-->
        <!--android:text="(this content will be soon available)"-->
        <!--android:textSize="@dimen/fontsize_normal2"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:focusable="true"-->
        <!--/>-->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_delete_back"
        android:text="@string/btn_delete"
        android:textColor="@color/btn_delete_text"
        android:textSize="@dimen/fontsize_normal"/>
</RelativeLayout>
