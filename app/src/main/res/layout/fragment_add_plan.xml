<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.stef_developer.disciplineassistent.fragments.AddPlanFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_frag"
    android:paddingRight="@dimen/activity_horizontal_margin_frag"
    android:paddingTop="@dimen/activity_vertical_margin_frag"
    android:paddingBottom="@dimen/activity_vertical_margin_frag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_plan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_plan_title"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/et_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_below="@+id/et_plan_title"
            android:hint="Details"/>
        <TextView
            android:id="@+id/tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_priority"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@android:color/black"
            android:layout_below="@id/et_details"
            android:layout_marginLeft="@dimen/margin_left_font_normal"/>
        <LinearLayout
            android:id="@+id/ll_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_priority"
            android:layout_marginTop="@dimen/margin_top_view_add_plan">
            <ImageView
                android:id="@+id/ic_p1"
                android:layout_width="0dp"
                android:layout_height="@dimen/priority_icon"
                android:layout_weight="1"
                android:src="@drawable/p1"/>
            <ImageView
                android:id="@+id/ic_p2"
                android:layout_width="0dp"
                android:layout_height="@dimen/priority_icon"
                android:layout_weight="1"
                android:src="@drawable/p2"/>
            <ImageView
                android:id="@+id/ic_p3"
                android:layout_width="0dp"
                android:layout_height="@dimen/priority_icon"
                android:layout_weight="1"
                android:src="@drawable/p3"/>
            <ImageView
                android:id="@+id/ic_p4"
                android:layout_width="0dp"
                android:layout_height="@dimen/priority_icon"
                android:layout_weight="1"
                android:src="@drawable/p4"/>
            <ImageView
                android:id="@+id/ic_p5"
                android:layout_width="0dp"
                android:layout_height="@dimen/priority_icon"
                android:layout_weight="1"
                android:src="@drawable/p5"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>